{
  "name": "@fullstack-chat-app/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "backend/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "backend/src/main.ts",
          "tsConfig": "backend/tsconfig.app.json",
          "assets": [
            "backend/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@fullstack-chat-app/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@fullstack-chat-app/backend:build:development"
          },
          "production": {
            "buildTarget": "@fullstack-chat-app/backend:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
  "cors": "^2.8.5",
  "dotenv": "^17.2.3",
  "express": "^4.21.2",
  "express-graphql": "^0.12.0",
  "graphql": "^15.10.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "prisma": "^6.19.1"
  }
}
