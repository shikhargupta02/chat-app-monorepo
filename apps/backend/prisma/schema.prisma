// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// =======================
// USER TABLE
// =======================
model User {
  id        Int      @id @default(autoincrement())
  username  String   
  email     String   @unique
  password  String

  messages  Message[]
  chats     ChatMember[]

  createdAt DateTime @default(now())
}

// =======================
// CHAT TABLE
// =======================
model Chat {
  id        Int      @id @default(autoincrement())
  chatName  String?
  isGroup   Boolean  @default(false)

  members   ChatMember[]
  messages  Message[]

  createdAt DateTime @default(now())
}

// =======================
// CHAT MEMBER (JOIN TABLE)
// =======================
model ChatMember {
  id     Int  @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  chat   Chat @relation(fields: [chatId], references: [id])
  chatId Int

  @@unique([userId, chatId])
}

// =======================
// MESSAGE TABLE
// =======================
model Message {
  id        Int      @id @default(autoincrement())
  text      String

  sender    User     @relation(fields: [senderId], references: [id])
  senderId  Int

  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    Int

  createdAt DateTime @default(now())
}
